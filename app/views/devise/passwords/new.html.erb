<% content_for(:title, t('.title'))%>
<div class="bg-customBeige text-customGreen min-h-screen">
  <div class="container mx-auto px-5 py-8" >
    <h2 class="text-3xl font-bold text-center pt-4">パスワード再設定</h2>
  </div>
  <div class="container mx-auto px-5 py-8">
    <div class="rounded-xl border-2 border-customGreen3 px-6 pt-10 pb-6 sm:mx-32 md:mx-40 lg:mx-60 xl:mx-96">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-6">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-2 border-customGreen2 rounded-xl bg-customBeige3 py-2 px-4" %>
        </div>

        <div class="actions text-center border-2 border-customGreen2 rounded-xl bg-customBeige py-2 px-4 my-8 transition ease-in-out hover:bg-customGreen3 hover:drop-shadow-lg hover:-translate-y-1">
          <%= f.submit "リセットメールの申請" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
