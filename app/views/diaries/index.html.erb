<% content_for(:title, t('.title'))%>
<div class="bg-customBeige text-customGreen min-h-screen">
  <div class="container mx-auto px-5 py-10">
    <h1 class="text-2xl font-bold text-center">幸せ日記一覧</h1>
  </div>
  <div class="container mx-auto px-16 py-10" >
    <% @diaries.each do |diary| %>
      <div class="bg-customBeige3 border-dashed border-2 border-customGreen rounded-xl mb-6 flex items-center justify-center">
        <div class="w-2/12 text-center">
          <h2><%= diary.date.to_date %>（<%= I18n.l(diary.created_at, format: '%a') %>）</h2>
        </div>
        <div class="w-9/12 px-6 pb-2 pt-6 border-l-2 border-customGreen2">
          <ul class="list-disc pl-5">
            <% diary.diary_entries.each do |entry| %>
              <li class="mb-4 px-6 py-2"><%= entry.content %></li>
            <% end %>
          </ul>
        </div>
        <div class="w-1/12 text-center ">
          <%= link_to "詳細", diary_path(diary.id), class: "bg-customGreen4 text-customBeige rounded-full drop-shadow-lg py-2 px-4 hover:bg-customGreen hover:drop-shadow-lg border-2 border-customGreen2"%>
        </div>
      </div>
    <% end %>
  </div>
</div>