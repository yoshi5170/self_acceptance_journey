<% content_for(:title, t('.title'))%>
<div class="bg-customBeige text-customGreen min-h-screen flex flex-col">
  <h1 class="text-2xl font-bold text-center mt-10">幸せ日記一覧</h1>
  <div class="container mx-auto py-2" >
    <% @diaries.each do |diary| %>
      <div class="bg-customBeige3 border-dashed border-2 border-customGreen rounded-lg flex items-center w-3/5 my-6 mx-auto">
        <div class="flex-1 flex items-center">
          <div class="px-2">
            <h2><%= diary.created_at.to_date %>（<%= I18n.l(diary.created_at, format: '%a') %>）</h2>
          </div>
          <div class="p-2 border-l-2 border-customGreen2">
            <ul class="list-disc pl-5">
              <% diary.diary_entries.each do |entry| %>
                <li><%= entry.content %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="px-2">
          <%= link_to "詳細", "#", class: "bg-customGreen4 text-customBeige my-2 px-5 py-2 rounded-full drop-shadow-lg hover:bg-customGreen hover:drop-shadow-lg border-2 border-customGreen2"%>
        </div>
      </div>
    <% end %>
  </div>
</div>