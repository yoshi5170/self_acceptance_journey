<% content_for(:title, t('.title'))%>
<div class="bg-customBeige text-customGreen5 min-h-screen">
  <div class="container mx-auto px-5 py-10">
    <h1 class="text-2xl font-bold text-center"><%= t('.title') %></h1>
  </div>
  <div class="text-center">
    <%= search_form_for @q, url: diaries_path do |f| %>
      <%= f.date_field :created_at_gteq, include_blank: true, class: 'bg-customBeige3 py-1 rounded-lg text-center'%>
      <span>~</span>
      <%= f.date_field :created_at_lteq_end_of_day, include_blank: true, class:'bg-customBeige3 py-1 rounded-lg text-center'%>
      <%= f.submit '検索', class: 'text-sm mx-2 md:text-base bg-customGreen7 rounded-lg drop-shadow-lg px-6 py-1 lg:px-4 hover:bg-customGreen6 hover:drop-shadow-lg border-2 border-customGreen2' %>
    <% end %>
  </div>
  <div class="container mx-auto py-10 lg:px-16 lg:py-10">
    <div class="flex justify-center md:justify-end text-center my-4">
      <%= link_to new_diary_path, data: { turbo: false } do %>
        <div class="text-sm md:text-base rounded-full drop-shadow-lg px-6 py-1 lg:px-4 hover:bg-customGreen6 hover:drop-shadow-lg border-2 border-customGreen7">
          <i class="fa-solid fa-book inline-block"></i>
          <p class="inline-block">幸せ日記を作成する</p>
        </div>
      <% end %>
    </div>
    <% if @diaries.present? %>
      <%= render partial: 'diary', collection: @diaries %>
    <% else %>
      <p class="text-center"><%= t('.no_result') %></p>
    <% end %>
  </div>
</div>