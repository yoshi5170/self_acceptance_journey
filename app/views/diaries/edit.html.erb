<% content_for(:title, t('.title'))%>
<div class="bg-customBeige text-customGreen min-h-screen">
  <div class="container mx-auto px-5 py-10">
    <h1 class="text-2xl font-bold text-center pt-4"><%= t('.title') %></h1>
  </div>
  <div class="container mx-auto lg:px-5 py-8">
    <div class="flex justify-center">
      <h2 class="w-4/5"> <%= @diary.date %>(<%= I18n.l(@diary.date, format: '%a') %>)</h2>
    </div>
    <div class="flex justify-center">
      <%= render 'form', diary_form: @diary_form, form_url: diary_path(@diary), form_method: :patch %>
    </div>
  </div>
</div>