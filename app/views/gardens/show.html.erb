<div class="h-screen bg-customBeige">
  <div class="flex flex-col justify-center">
    <h1 class="text-customGreen text-center my-6">マイガーデン</h1>
    <div class="bg-customGreen text-white max-w-xl mx-auto my-10"> <!-- max-w-xl で最大幅を設定し、mx-auto で中央に配置 -->
      <h3 class="text-center">総花数<%= @total_flowers_count %>本 | 週花数<%= @weekly_flowers_count %>本</h3>
    </div>
  </div>
  <div class="flex items-center justify-center mt-8">
    <%= paginate @planted_flowers %>
  </div>

  <div class="flex items-center justify-center mt-2">
    <% counter = 0 %>
    <table class="border-collapse bg-customBrown">
      <% 5.times do |row|%>
        <tr>
          <% 8.times do |column| %>
            <% if @planted_flowers[counter] %>
              <td class="w-24 h-24 p-2.5 border-2 border-customBrown2 box-border text-center ">
                <div class="flex justify-center items-center">
                  <%= image_tag 'white_flower.png', size: '50x50' %>
                </div>
              </td>
            <% else %>
              <td class="w-24 h-24 p-2.5 border-2 border-customBrown2 box-border text-center "></td>
            <% end %>
            <% counter += 1 %>
          <%end%>
        </tr>
      <%end%>
    </table>
  </div>
</div>
