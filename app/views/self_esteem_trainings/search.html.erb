<% content_for( :title, t('.title'))%>
<div class="bg-customBeige text-customGreen min-h-screen">
  <div class="container mx-auto px-5 py-10">
    <h1 class="text-2xl md:text-3xl font-bold text-center mt-10">自己受容に変換</h1>
  </div>
  <div class="container mx-auto px-2 py-4 md:py-10 md:px-5">
    <div class="flex items-end hidden md:inline-flex">
      <div class="w-1/5 text-center">
        <%= image_tag 'rabbit.png', size:'206x256', class:'w-3/5 mx-auto'%>
      </div>
      <div class="chat chat-start w-3/5 pl-8">
        <div class="chat-bubble py-10 px-10 bg-customGreen2">
          <p class="text-customGreen text-center tracking-wide leading-relaxed"><%= @chat %></p>
        </div>
      </div>
    </div>
    <div class="flex flex-col md:hidden">
      <div class="border border-customGreen2 bg-customGreen2 rounded-xl px-2 py-10">
          <p class="text-xs text-customGreen text-center tracking-wide leading-relaxed"><%= @chat %></p>
      </div>
      <div class="text-center">
        <%= image_tag 'rabbit.png', size:'80x100', class:'w-2/6 sm:w-1/5 mx-auto my-8'%>
      </div>
    </div>
  </div>
  <div class="container mx-auto py-2 px-5 md:py-10">
    <div class="bg-customGreen4 text-customBeige shadow-lg rounded-full text-center w-1/4 mx-auto mb-20 py-2 hover:bg-customGreen2 hidden lg:block">
      <%= link_to '自己受容トレーニングに戻る', new_self_esteem_training_path, data: { turbo: false }%>
    </div>
    <div class="bg-customGreen4 text-customBeige shadow-lg rounded-full text-center w-2/4 mx-auto my-4 py-2 hover:bg-customGreen2 lg:hidden">
      <%= link_to '戻る', new_self_esteem_training_path, data: { turbo: false }%>
    </div>
  </div>
</div>


