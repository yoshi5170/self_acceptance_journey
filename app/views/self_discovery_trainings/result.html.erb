<% content_for( :title, t('.title'))%>
<div class="bg-customBeige text-customGreen5 min-h-screen">
  <div class="container mx-auto px-5 py-10">
    <h1 class="text-2xl md:text-3xl font-bold text-center mt-10">長所に変換</h1>
  </div>
  <div class="container mx-auto px-2 py-4 md:py-10 md:px-5 lg:px-24 xl:px-32">
    <div class="flex items-end hidden md:inline-flex">
      <div class="w-1/5 text-center">
        <%= image_tag 'rabbit.png', size:'206x256', class:'w-3/5 mx-auto'%>
      </div>
      <div class="chat chat-start w-4/5 pl-8">
        <div class="chat-bubble py-10 px-10 bg-customGreen7">
          <p class="text-customGreen text-center tracking-wide leading-normal"><%= @chat %></p>
        </div>
      </div>
    </div>
    <div class="flex flex-col md:hidden">
      <div class="border border-customGreen2 bg-customGreen7 rounded-xl px-2 py-10">
          <p class="text-xs text-customGreen text-center tracking-wide leading-normal"><%= @chat %></p>
      </div>
      <div class="text-center">
        <%= image_tag 'rabbit.png', size:'80x100', class:'w-1/3 sm:w-1/5 mx-auto my-8'%>
      </div>
    </div>
  </div>
  <div class="container mx-auto py-2 px-5 md:py-10">
    <div class="bg-customGreen7 border-2 border-customGreen2 shadow-lg rounded-full text-center w-1/4 mx-auto mb-20 py-2 hover:bg-customGreen6 hidden lg:block">
      <%= link_to '自己発見トレーニングに戻る', new_self_discovery_training_path, data: { turbo: false }%>
    </div>
    <div class="g-customGreen7 border-2 border-customGreen2 shadow-lg rounded-full text-center w-2/4 mx-auto my-4 py-2 hover:bg-customGreen6 lg:hidden">
      <%= link_to '戻る', new_self_discovery_training_path, data: { turbo: false }%>
    </div>
  </div>
</div>
