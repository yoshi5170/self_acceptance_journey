<header class="bg-customGreen5 flex flex-row justify-between items-center h-20">
  <div class="text-customGreen3 ml-2 md:mx-6 text-xl md:text-2xl font-bold">
    <%= link_to "JustBe U", "/" %>
  </div>
  <div class="flex items-center space-x-1 md:mx-6 text-customGreen2">
    <%= link_to new_user_session_path, class:'mx-2 hidden md:flex md:flex-col' do %>
      <i class="fa-solid fa-right-to-bracket text-center text-xl"></i>
      <p class="text-sm font-semibold"><%= t('devise.sessions.new.sign_in') %></p>
    <% end %>
    <%= link_to new_user_registration_path, class:'mx-2 hidden md:flex md:flex-col' do %>
      <i class="fa-solid fa-user-plus text-center text-xl"></i>
      <p class="text-sm font-semibold"><%= t('devise.shared.links.sign_up') %></p>
    <% end %>
    <details class="dropdown dropdown-end hidden md:flex md:flex-col">
      <summary class="text-customGreen2 m-1 btn bg-customGreen5 border-none hover:bg-customGreen5">
        <i class="fa-solid fa-bars h-6 w-8"></i>
      </summary>
        <ul class="dropdown-content z-[1] menu px-4 py-2 shadow rounded-xl bg-customGreen5 w-80 text-customGreen2 mt-3">
          <li class="hover:bg-customGreen hover:rounded-xl">
            <%= link_to "自己否定度診断", questions_path, class:"text-sm font-semibold mx-2", data: { turbo: false }%>
          </li>
          <li class="hover:bg-customGreen hover:rounded-xl">
            <%= link_to "みんなの励ましクエスト", encouragement_requests_path, data: { turbo: false }, class: "text-sm font-semibold mx-2"%>
          </li>
        </ul>
    </details>

    <nav class="md:hidden">
      <details class="dropdown dropdown-end">
        <summary class="text-customGreen2 m-1 btn bg-customGreen5 border-none hover:bg-customGreen5">
          <i class="fa-solid fa-bars h-6 w-8"></i>
        </summary>
          <ul class="dropdown-content z-[1] menu px-4 py-2 shadow rounded-xl bg-customGreen5 w-80 text-customGreen2 mt-3">
            <li class="hover:bg-customGreen hover:rounded-xl">
              <%= link_to new_user_session_path, class:'flex items-center mx-2' do %>
                <i class="fa-solid fa-right-to-bracket text-center text-lg"></i>
                <p class="text-sm font-semibold"><%= t('devise.sessions.new.sign_in') %></p>
              <% end %>
            </li>
            <li class="hover:bg-customGreen hover:rounded-xl mt-2">
              <%= link_to new_user_registration_path, class:'flex items-center mx-2' do %>
                <i class="fa-solid fa-user-plus text-center text-lg"></i>
                <p class="text-sm font-semibold"><%= t('devise.shared.links.sign_up') %></p>
              <% end %>
            </li>
            <li class="hover:bg-customGreen hover:rounded-xl border-t-2 border-customGreen4 mt-4 pt-2">
              <%= link_to "自己否定度診断", questions_path, class:"text-sm font-semibold mx-2", data: { turbo: false }%>
            </li>
            <li class="hover:bg-customGreen hover:rounded-xl">
              <%= link_to "みんなの励ましクエスト", encouragement_requests_path, data: { turbo: false }, class: "text-sm font-semibold mx-2"%>
            </li>
          </ul>
      </details>
    </nav>
  </div>
</header>