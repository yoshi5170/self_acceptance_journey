<% content_for(:title, t('.title'))%>
<div class="bg-customBeige min-h-screen text-customGreen5">
  <div class="container mx-auto px-2 sm:px-5 py-10">
    <h1 class="text-2xl font-bold text-center my-10"><%= t('.title') %></h1>
  </div>
  <div class="container mx-auto px-4 py-10">
    <% if @encouragement_messages.present? %>
      <div class="grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
        <%= render partial: 'encouragement_message', collection: @encouragement_messages %>
      </div>
    <% else %>
      <p class="text-center"><%= t('.no_result') %></p>
    <% end %>
  </div>
</div>