<div class="text-customBrown h-screen flex flex-col items-center justify-center ">
  <div class="mb-20 text-4xl">
    <h1>新しい花を登録する</h1>
  </div>
  <div class="bg-slate-300 border-2 border-inherit p-5 rounded-xl" >
    <%= form_with url: admin_unlockable_flowers_path, scope: :unlockable_flower, local: true do |f|%>
      <div class="flex flex-col justify-center my-3">
        <%= f.label :name%>
        <%= f.text_field :name%>
      </div>
      <div class="flex flex-col justify-center my-3">
        <%= f.label :threshold %>
        <%= f.number_field :threshold%>
      </div>
      <div class="flex flex-col justify-center my-3">
        <%= f.label :flower_image%>
        <%= f.file_field :flower_image%>
      </div>
      <div class="border-2 border-inherit flex justify-center my-3">
        <%= f.submit "登録" %>
      <div>
    <%end%>
  </div>
</div>